@model IEnumerable<Bdl.BoletoBdl.Application.ViewModels.MembroViewModel>

@{
    ViewBag.Title = "Lista de Membros";
}

<div>
    <h2>Gestão de Membros</h2>
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        <strong>@ViewBag.Title</strong>
    </div>

    <table class="table table-responsive table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apelido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Padrinho)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Graduacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataAdmissao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nascimento)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apelido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Padrinho)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Graduacao.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataAdmissao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nascimento)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Membros", new { id = item.MembroId })" class="btn btn-default"><span title="Editar" class="glyphicon glyphicon-pencil"></span></a>
                    <a href="@Url.Action("Details", "Membros", new { id = item.MembroId })" class="btn btn-default"><span title="Detalhes" class="glyphicon glyphicon-search"></span></a>
                    <a href="@Url.Action("Delete", "Membros", new { id = item.MembroId })" class="btn btn-danger"><span title="Excluir" class="glyphicon glyphicon-trash"></span></a>
                </td>
            </tr>
        }

    </table>
</div>
<div>
    <div class="form-group">
        @Html.ActionLink("Create New", "Create")
    </div>
</div>
